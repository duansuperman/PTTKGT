#include<iostream>
using namespace std;
int N;
int a[100];
int Min =1000;
int du;
void Nhap(){
    cin>>N;

}
void Try(int k){
    if(k==3){
        int Tong =0;
        
        for(int i=0;i<3;i++){
            Tong+=a[i];
        }
        if(Tong == N){
            if((a[0]-N/3==1||a[0]-N/3==0)&&(a[1]-N/3==1||a[1]-N/3==0)&&(a[2]-N/3==1||a[2]-N/3==0)){
                cout<<a[0]<<" "<<a[1]<<" "<<a[2]<<endl;
            }
        }
        return;
    }
    for(int i=1;i<=N;i++){
        a[k]=i;
        Try(k+1);
        a[k]=0;
    }
}
int main(){
    Nhap();
    Try(0);
    return 0;
}